<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_history_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_view_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/banana_yellow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_history_item_text"
            style="@style/MoodTrackerText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_horizontal"
            android:layout_marginRight="@dimen/small_margin"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/fragment_history_item_comment_button"
                style="@style/MoodTrackerImageButton.ItemButton"
                android:src="@drawable/ic_comment_black_48px"/>

            <ImageButton
                android:id="@+id/fragment_history_item_share_button"
                style="@style/MoodTrackerImageButton.ItemButton"
                android:src="@drawable/baseline_share_black_48" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>