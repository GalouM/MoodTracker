<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:imageButtonStyle">@style/MoodTrackerImageButton</item>
    </style>

    <!-- | STYLES | -->
    <!-- Text View -->
    <style name="MoodTrackerText" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <!-- Image Button -->
    <style name="MoodTrackerImageButton" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@null</item>
    </style>

    <style name="MoodTrackerImageButton.MainButton">
        <item name="android:layout_width">@dimen/size_button_main_activity</item>
        <item name="android:layout_height">@dimen/size_button_main_activity</item>
        <item name="android:layout_margin">@dimen/big_margin</item>
    </style>

    <style name="MoodTrackerImageButton.ItemButton">
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:layout_width">@dimen/size_mood_button</item>
        <item name="android:layout_height">@dimen/size_mood_button</item>
    </style>




</resources>
